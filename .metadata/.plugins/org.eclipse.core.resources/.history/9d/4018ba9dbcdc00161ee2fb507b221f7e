package warGame;

import java.util.Random;

public class Play {
	public static Player p1 = new Player("p1");
	public static Player p2 = new Player("p2");

	public static void main(String[] args) {
		dealCards();
		for (int i = 0; i < p1.cards.length; i++) {
			System.out.println(p1.cards[i]);
		}
		
		
	}
	
	static void dealCards() {
		Random r = new Random();
		while(true){
			
		int cardIdx=r.nextInt(12);
		int suiteIdx=r.nextInt(3);
		
		for (int i = 0; i < p1.cards.length; i++) {
			int idx=0;
			while(idx<24) {
				if(i==idx) {
					idx++;
				}
				if((p1.cards[i].card.equals(null))||(p1.cards[i].suite.equals(null))) {
					p1.cards[i]=new Cards(cardIdx,suiteIdx);
				}
				if((p1.cards[idx].card.equals(null))||(p1.cards[idx].suite.equals(null))) {
					cardIdx=r.nextInt(12);
					suiteIdx=r.nextInt(3);
					p1.cards[idx]=new Cards(cardIdx,suiteIdx);
				}
				while((p1.cards[i].card.equals(p1.cards[idx].card)) && (p1.cards[i].suite.equals(p1.cards[idx].suite))) {
					cardIdx=r.nextInt(12);
					suiteIdx=r.nextInt(3);
					p1.cards[i]=new Cards(cardIdx,suiteIdx);
					}
				idx++;
				}
			}
		break;
		
		}
	
		
		
	}

}
