package homeWork5;

import java.util.Scanner;

public class Task6 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter sentence:");
		String string1 = sc.nextLine();
		int indexOfSpace = string1.indexOf(" ");
		String string2 = null;
		
		for (int i = 0; i < string1.length(); i++) {
			if(i==0) {
				string2=string1.substring(0, 1).toUpperCase() + string1.substring(1,indexOfSpace);
				System.out.println(string2 + " ");
			}
			else if(string1.charAt(i)==' ') {
				 string2=string1.substring(i+1,i+2).toUpperCase() + string1.substring(i+2,string1.indexOf(' ',i+2));
				 System.out.print(string2 + " ");
			 }
			
		}
		

	}

}
